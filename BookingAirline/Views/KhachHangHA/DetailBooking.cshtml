@model IEnumerable<BookingAirline.Models.ChiTietHD>
@using BookingAirline.Models
@{
    ViewBag.Title = "DetailBooking";
    Layout = "~/Views/KhachHangHA/Shared/_LayoutPage1.cshtml";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">

<!-- Bootstrap Stylesheet -->
<link href="~/Content/CSS_01/bootstrap.min.css" rel="stylesheet" />
<!-- Font Awesome Stylesheet -->
<link href="~/Content/CSS_01/font-awesome.min.css" rel="stylesheet" />
<!-- Custom Stylesheets -->
<link href="~/Content/CSS_01/style.css" rel="stylesheet" />
<link href="~/Content/CSS_01/orange.css" rel="stylesheet" />
<link href="~/Content/CSS_01/responsive.css" rel="stylesheet" />


<!--===== INNERPAGE-WRAPPER ====-->
<section class="innerpage-wrapper">
    <div id="dashboard" class="innerpage-section-padding">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="dashboard-heading">
                        <h2>Travel <span>Profile</span></h2>
                        <p>Hi Lisa, Welcome to Star Travels!</p>
                        <p>All your trips booked with us will appear here and you'll be able to manage everything!</p>
                    </div><!-- end dashboard-heading -->

                    <div class="dashboard-wrapper">
                        <div class="row">

                            <div class="col-xs-12 col-sm-2 col-md-2 dashboard-nav">
                                <ul class="nav nav-tabs nav-stacked text-center">
                                    <li><a href="~/KhachHangHA/ThongTinKH"><span><i class="fa fa-cogs"></i></span>Dashboard</a></li>
                                    <li><a href="~/KhachHangHA/ThongtinCaNhan"><span><i class="fa fa-user"></i></span>Profile</a></li>
                                    <li class="active"><a href="~/KhachHangHA/Booking"><span><i class="fa fa-briefcase"></i></span>Booking</a></li>
                                    <li><a href="~/KhachHangHA/Whishlist"><span><i class="fa fa-heart"></i></span>Wishlist</a></li>
                                    <li><a href="~/KhachHangHA/MyCard"><span><i class="fa fa-credit-card"></i></span>My Cards</a></li>
                                </ul>
                            </div><!-- end columns -->

                            <div class="col-xs-12 col-sm-10 col-md-10 dashboard-content booking-trips">
                                <h2 class="dash-content-title">Detail bill : @TempData["mahd"]!</h2>
                                <div class="dashboard-listing booking-listing">
                                    <div class="dash-listing-heading">
                                        <div class="custom-radio">
                                            <input type="radio" id="radio01" name="radio" checked />
                                            <label for="radio01"><span></span>FLIGHT</label>
                                        </div><!-- end custom-radio -->
                                        <!--<div class="custom-radio">
                                            <input type="radio" id="radio02" name="radio" />
                                            <label for="radio02"><span></span>Hotels</label>
                                        </div>-->
                                        <!-- end custom-radio -->
                                        <!--<div class="custom-radio">
                                            <input type="radio" id="radio03" name="radio" />
                                            <label for="radio03"><span></span>Flights</label>
                                        </div>-->
                                        <!-- end custom-radio -->
                                        <!--<div class="custom-radio">
                                            <input type="radio" id="radio04" name="radio" />
                                            <label for="radio04"><span></span>Cars</label>
                                        </div>-->
                                        <!-- end custom-radio -->
                                    </div>

                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td class="dash-list-icon booking-list-date"><div class="b-date"><h3>@item.STT</h3><p></p></div></td>
                                                        <td class="dash-list-text booking-list-detail">
                                                            <h3>Detail BOOKING: @item.MaHD</h3>
                                                            <ul class="list-unstyled booking-info">
                                                                <li><span>Ticket code :</span> @item.MaVe</li>
                                                                <li><span>Quantity:</span> @item.SoLuong</li>
                                                                <li><span>Price:</span> @item.DonGia</li>
                                                                <li><span>Total:</span> @item.TongTien</li>
                                                            </ul>
                                                        </td>
                                                       
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div><!-- end table-responsive -->
                                </div><!-- end booking-listings -->

                            </div><!-- end columns -->

                        </div><!-- end row -->
                    </div><!-- end dashboard-wrapper -->
                </div><!-- end columns -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end dashboard -->
</section><!-- end innerpage-wrapper -->
