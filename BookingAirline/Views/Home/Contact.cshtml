@{
    ViewBag.Title = "Contact";
}

<link rel="stylesheet" href="~/Style/Css/contactStyle.css">
<link rel="Shortcut Icon" href="~/hinh/logo-i.png" type="image/x-icon" />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
<style>

        p{
            font-family: 'Open Sans', sans-serif;
        }
</style>



<nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
    <div class="container">
        <img class="Logo" src="/hinh/logo.png" alt="Logo">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/KhachHang/TrangChu">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/About">About</a>
            </li>
        </ul>
    </div>
</nav>



<div class="map">
    <iframe src="https://snazzymaps.com/embed/2369" width="100%" height="100%" style="border:none;"></iframe>
</div>

<div class="content">
    <div class="contact">
        <div class="other">
            <div class="info">
                <h2>CONTACT </h2>
                <div class="col-md-4">
                    <div class="single-contact">
                        
                        <h5>Address</h5>
                        <p>Su Van Hanh,TP.HCM</p>
                    </div>
                    <div class="single-contact">
                        
                        <h5>Hotline:</h5>
                        <p>0123.456.789</p>
                    </div>
                    <div class="single-contact">
                        
                        <h5>Email</h5>
                        <p>hotro@bookingairline.com</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="form">
            <h1>Get In Touch</h1>
            <form action="">
                <div class="flex-rev">
                    <input type="text" name="name" id="name" />
                    <label for="name">Name</label>
                </div>
                <div class="flex-rev">
                    <input type="email" name="email" id="email" />
                    <label for="email">Email</label>
                </div>

                <div class="flex-rev">
                    <textarea name="message" id="message" ></textarea>
                    <label for="message">Message</label>
                </div>
                <button>Send</button>
            </form>
        </div>
    </div>
</div>