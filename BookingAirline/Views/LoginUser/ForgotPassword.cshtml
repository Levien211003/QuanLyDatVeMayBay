
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,300i,400,400i,700,700i,900,900i%7CMerriweather:300,300i,400,400i,700,700i,900,900i" rel="stylesheet">
    <link rel="apple-touch-icon" href="~/Style/apple-touch-icon.html">
    <link href="~/Content/CSS_01/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CSS_01/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/CSS_01/style.css" rel="stylesheet" />
    <link href="~/Content/CSS_01/orange.css" rel="stylesheet" />
    <link href="~/Content/CSS_01/responsive.css" rel="stylesheet" />
    <link href="~/Style/Css/Login.css" rel="stylesheet" />

    <link rel="apple-touch-icon" href="~/Style/apple-touch-icon.html">

    <link rel="Shortcut Icon" href="~/hinh/logo-i.png" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Style/Css/myStyle.css">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">

    <script src="~/Style/Js/modernizr-2.8.3-respond-1.4.2.min.js"></script>
</head>
<body>
    <div>
        <!--===== INNERPAGE-WRAPPER ====-->
        <section class="innerpage-wrapper">
            <div id="forgot-password" class="innerpage-section-padding">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="flex-content">
                                <div class="custom-form custom-form-fields">
                                    <h3>Forgot Password</h3>
                                    <p>When you fill in your registered email address, you will be sent instructions on how to reset your password.</p>
                                    <form method="post" action="~/LoginUser/ForgotPassword">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Your Email" required />
                                            <span><i class="fa fa-envelope"></i></span>
                                        </div>
                                        <p class="text-danger">@TempData["error04"]</p>
                                        <button class="btn btn-orange btn-block" type="submit">Send</button>
                                    </form>

                                    <div class="other-links">
                                        <p class="link-line">Already Have An Account ? <a href="~/LoginUser/Login">Login Here</a></p>
                                        <p class="link-line">New Here ? <a href="#">Join Us</a></p>
                                    </div><!-- end other-links -->
                                </div><!-- end custom-form -->
                                <div class="flex-content-img custom-form-img">
                                    <img src="~/hinh/contact-02.jpg"  class="img-responsive" alt="registration-img" />
                                </div><!-- end custom-form-img -->
                            </div><!-- end form-content -->

                        </div><!-- end columns -->
                    </div><!-- end row -->
                </div><!-- end container -->
            </div><!-- end forgot-password -->
        </section><!-- end innerpage-wrapper -->
    </div>
</body>
</html>
