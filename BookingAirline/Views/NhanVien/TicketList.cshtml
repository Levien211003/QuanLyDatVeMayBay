        <table id="datatablesSimple">
            <thead>
                @*//Phần render*@
                <tr>
                    <th>Mã vé</th>
                    <th>Mã chuyến bay</th>
                    <th>Hạng vé</th>
                    <th>Mã khách hàng</th>
                    <th>Giá vé</th>
                    <th>CCCD</th>
                    <th>Tình trạng</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @{ var dsticket = db.Ves.ToList();
                    foreach (var item01 in dsticket)
                    {
                        <tr>
                            <td>@item01.MaVe</td>
                            <td>@item01.MaCB</td>
                            <td>@item01.MaHV</td>
                            <td>@item01.IDKH</td>
                            <td>@item01.GiaVe</td>
                            <td>@item01.CCCD</td>
                            <td>@item01.TinhTrang</td>
                            <td>Chỉnh sửa || Xóa</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
