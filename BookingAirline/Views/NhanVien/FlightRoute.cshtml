@section script{
    <script>
        LoadData();
        $(document).ready(function () {
            $('#btnSave').click(function () {
                var masb = $('#InputMaSB').val();
                var tenSB = $('#InputTenSB').val();
                var model = {
                    MaSB: masb,
                    TenSB: tenSB

                };
                $.ajax({
                    url: '/NhanVien/AddAirport',
                    type: 'POST',
                    data: model,
                    success: function (res) {
                        if (res.success) {
                            window.location.reload();
                        }
                    }
                });
            });
        });
        //Thêm mới tuyến bay
        $(document).ready(function () {
            $('#btnSaveAir').click(function () {
                var masb = $('#MaSB').val();
                var sbdi = $('#SanBayDi').val();
                var sbden = $('#SanBayDen').val();
                var model = {
                    MaSB: masb,
                    SanBayDi: sbdi,
                    SanBayDen: sbden
                };
                $.ajax({
                    url: '/NhanVien/AddRoute',
                    type: 'POST',
                    data: model,
                    success: function (res) {
                        if (res.success == true) {
                            window.location.reload();
                        }
                        else {

                        }
                    }
                });
            });
        });
        function LoadData() {
            $.ajax({
                url: '/NhanVien/GetData',
                type: 'GET',
                success: function (res) {
                    if (res.TotalItems > 0) {
                        var SetData = $("#showdata");
                        var items = res.Data;
                        var html = "";
                        console.log(items);
                        for (let i = 0; i < res.TotalItems; i++) {
                            html += "<tr>";
                            html += "<td>" + items[i].MaTBay + "</td>";
                            html += "<td>" + items[i].MaSB + "</td>";
                            html += "<td>" + items[i].SanBayDi + "</td>";
                            html += "<td>" + items[i].SanBayDen + "</td>";
                            html += "<td></td>";
                            html += "</tr>";
                        }
                        SetData.html(html);
                    }
                }
            })
        }
        function ConfirmDelete() {
            var matb = $('#MaTbay').val();
            $.ajax({
                type: "POST",
                url: "/NhanVien/DeleteFR/" + matb,
                success: function (res) {
                    if (res.success == true) {
                        window.location.reload();
                    }
                    else {

                    }
                }
            })
        }
    </script>
